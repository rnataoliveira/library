@Model Library.Features.BookCatalog.Books;

<main>
    <div class="container">
        <section id="search-results" class="mt-4 row ">
            <div class="jumbotron col-md-11" style = "height:300px;">
            </div>
            <div class="row">
                @foreach(var in Model){
                     <div class="col-md-2.4 ml-3 mr-1">
                        <div class="thumbnail">
                            <img src="@model.Cover" Style = "height:232px;" >
                            <div class="caption">
                                <h5>@model.Title</h3>
                                <p>@model.Description</p>
                                <p><a href="#" asp-action="Details" asp-controller="Books" class="btn btn-primary" role="button">ver mais</a></p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</main>